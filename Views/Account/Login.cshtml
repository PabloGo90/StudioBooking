@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h1 class="h3 mb-3 fw-normal">Iniciar sesión</h1>
<form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post"
    class="form-horizontal" role="form">
     <div class="form-floating">
        <input type="text" name="username" id="username" class="form-control" placeholder="Usuario" required>
        <label for="username">Usuario</label>
    </div>
    <div class="form-floating">
        <input type="password" name="password" id="password" class="form-control" placeholder="Contraseña" minlength="4" required>
        <label for="password">Contraseña</label>
    </div>
    <div class="form-check text-start my-3" style="display:none;">
        @*<input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault"> Remember me </label>*@
        @*<a class="small" href="password.html">Olvido contraseña?</a>*@
    </div>
    <button type="submit" class="btn btn-primary w-100 py-2 custColor">Ingresar</button>
</form>
